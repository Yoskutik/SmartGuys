        //         fio: $('input').val()
        //     },
        //     success: data => {
                window.location.href = `${window.location.origin}/?new_admin=${$('input').val()}`;
            // }
        // })
    });

    $('input').on('focus', () => $('input').removeClass('border-danger'));

    $('form').on('submit', e => {
        e.preventDefault();
        $('button').trigger('click');
    })
</script>
</body>
</html>